{
  "name": "joist",
  "version": "3.0.0",
  "description": "",
  "type": "module",
  "author": "",
  "license": "MIT",
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "install": "wireit",
    "start": "wireit",
    "build": "wireit",
    "test": "wireit"
  },
  "wireit": {
    "install": {
      "dependencies": [
        "build"
      ]
    },
    "start": {
      "command": "serve",
      "service": true,
      "dependencies": [
        {
          "script": "build",
          "cascade": false
        }
      ]
    },
    "build": {
      "dependencies": [
        "./packages/di:build",
        "./packages/element:build",
        "./packages/observable:build",
        "./packages/ssr:build",
        "./integration/counter:build",
        "./integration/todo:build"
      ]
    },
    "test": {
      "dependencies": [
        "./packages/di:test",
        "./packages/element:test",
        "./packages/observable:test",
        "./packages/ssr:test"
      ]
    }
  },
  "devDependencies": {
    "@open-wc/testing": "3.1.8",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.1.1",
    "@web/test-runner": "^0.16.1",
    "ava": "^5.2.0",
    "lit-html": "^2.7.4",
    "serve": "^14.2.0",
    "tslib": "2.5.0",
    "typescript": "5.0.4",
    "wireit": "^0.9.5"
  }
}
